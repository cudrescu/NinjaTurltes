<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping>
        <class-a>com.endava.hackathon.model.UserEntity</class-a>
        <class-b>com.endava.hackathon.dto.UserProfile</class-b>
        <field>
            <a>profileEntity.firstName</a>
            <b>firstName</b>
        </field>
        <field>
            <a>profileEntity.lastName</a>
            <b>lastName</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>com.endava.hackathon.model.ProfileHasSkillEntity</class-a>
        <class-b>com.endava.hackathon.dto.ProfileSkill</class-b>
        <field>
            <a>skillEntity.name</a>
            <b>name</b>
        </field>
        <field>
            <a>skillEntity.skillCategoryEntity.name</a>
            <b>category</b>
        </field>
        <field>
            <a>score</a>
            <b>score</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.endava.hackathon.model.SkillEntity</class-a>
        <class-b>com.endava.hackathon.dto.Skill</class-b>
        <field>
            <a>name</a>
            <b>name</b>
        </field>
        <field>
            <a>skillCategoryEntity.name</a>
            <b>skillCategory</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.endava.hackathon.model.SkillCategoryEntity</class-a>
        <class-b>com.endava.hackathon.dto.SkillCategory</class-b>
        <field>
            <a>name</a>
            <b>name</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.endava.hackathon.model.UserPositionEntity</class-a>
        <class-b>com.endava.hackathon.dto.UserPosition</class-b>
        <field>
            <a>name</a>
            <b>name</b>
        </field>
    </mapping>
</mappings>